<h1>Listing tropies</h1>

<table>
  <tr>
    <th>Pageid</th>
    <th>Content</th>
  </tr>

<% @tropies.each do |tropy| %>
  <tr>
    <td><%=h tropy.pageid %></td>
    <td><%=h tropy.content %></td>
    <td><%= link_to 'Show', tropy %></td>
    <td><%= link_to 'Edit', edit_tropy_path(tropy) %></td>
    <td><%= link_to 'Destroy', tropy, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tropy', new_tropy_path %>